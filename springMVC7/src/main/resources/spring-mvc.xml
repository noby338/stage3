<!--                <entry key="priv.noby.note.exception.MyException" value="/my_exception_error.jsp"/>-->
<!--            </map>-->
<!--        </property>-->
<!--    </bean>-->

    <!--SpringMVC处理异常的第二种方式-->
    <bean class="priv.noby.note.resolver.MyExceptionResolver"/>

</beans>