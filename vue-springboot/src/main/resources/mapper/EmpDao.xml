<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="priv.noby.vuespringboot.dao.EmpDao">
    <insert id="insert">
        insert into emp(ename,did,hiredate)  values(#{ename},#{dep.did},#{hiredate})
    </insert>
    <update id="updateByEmp">
        update emp set ename=#{ename},hiredate=#{hiredate},did=#{dep.did} where eid=#{eid}
    </update>
    <delete id="deleteByEid">
        delete from emp where eid=#{eid}
    </delete>
    <select id="selectAll" resultMap="emp_dep_map">
        select * from emp
    </select>
    <select id="selectByEmp" resultMap="emp_dep_map">
        select * from emp
        <where>
            <if test="eid != null and eid !=''">
                and eid = #{eid}
            </if>
            <if test="ename != null and ename !=''">
                and ename like '%' #{ename} '%'
            </if>
            <if test="dep.did != null and dep.did !=''">
                and did = #{dep.did}
           </if>
        </where>
    </select>
    <resultMap id="emp_dep_map" type="emp">
        <id column="eid" property="eid"/>
        <result column="ename" property="ename"/>
        <association column="did" property="dep" javaType="Dep" select="selectDepByDid"/>
    </resultMap>
    <select id="selectDepByDid" resultType="Dep">
        select * from dep where did=#{did}
    </select>
</mapper>